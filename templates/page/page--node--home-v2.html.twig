{#
/**
* @file
* Template for the main page.
*/
#}
<div class="page home-v2">
	<h1 class="sr-only">Sitio Web Empresa de Renovación y Desarrollo Urbano</h1>
	{% embed '@radix/navbar/navbar.twig' with {
	placement: 'sticky-top',
	container: 'fluid',
	color: 'dark',
	utility_classes: ['bg-light menu-principal'],
	} %}

		{% block branding %}
			{% if page.navbar_branding %}
				{{ page.navbar_branding }}
			{% endif %}
		{% endblock %}

		{% block left %}
			{% if page.navbar_left %}
				<div class="mr-auto">
					{{ page.navbar_left }}
				</div>
			{% endif %}
		{% endblock %}

		{% block right %}
			{% if page.navbar_right %}
				<div class="menu-secundario d-flex flex-row align-items-center">
					{{ page.navbar_right }}
				</div>
			{% endif %}
		{% endblock %}
	{% endembed %}

	{% if page.header %}
		<header class="page__header mb-3" title="Región Encabezado">
			{% if (is_front) %}
				<div class="container-fluid px-0">
					{{ page.header }}
				</div>
			{% elseif (url == '/es/juntos-construimos') %}
				<div class="container-fluid px-0">
					{{ page.header }}
				</div>
			{% else %}
				<div class="container">
					{{ page.header }}
				</div>
			{% endif %}
		</header>
	{% endif %}

	{% if page.content %}
		<main title="Contenido principal" id="main-content">
			{% if is_front %}
				<div class="page__content home">
					{% else %}
				{% endif %}
				{{ page.content }}

			</main>
		{% endif %}

		 <script>
				var divTag = document.getElementsByTagName("div");
				for (var i = 0; i < divTag.length; i++) {
					if (divTag[i].textContent == "En curso") {
						divTag[i].classList.add("curso");
					}
					if (divTag[i].textContent == "Finalizado") {
						divTag[i].classList.add("finalizado");
					}
					if (divTag[i].textContent == "proximo") {
						divTag[i].classList.add("proximo");
					}
				}
		
			</script>


	</div>
	<footer class="page__footer" {{ attributes }} title="Pie de página Misión, enlaces de interés y datos de contacto">
		<div class="container">
			<div class="row">
				{{ page.footer }}
			</div>
		</div>
	</footer>

	{% if page.footer %}{% endif %}

	{% if page.footer_light %}
		<footer class="page__footer_2" {{ attributes }} title="Pie de página, redes sociales, s d q s, mapa del sitio">
			<div class="container">
				<div class="row">
					{{ page.footer_light }}
				</div>
			</div>
		</footer>
	{% endif %}

	{% if page.footer_black %}
		<footer class="page__footer_3" {{ attributes }} title="Pie de página - Términos, condiciones, logos">
			<div class="container">
				<div class="row">
					{{ page.footer_black }}
				</div>
			</div>
		</footer>
	{% endif %}
