{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  <h1 class="sr-only">Sitio Web Empresa de Renovaci√≥n y Desarrollo Urbano - ERU</h1>
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fluid',
    color: 'dark',
    utility_classes: ['bg-light menu-principal'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
      
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
      <div class="menu-secundario d-flex flex-row align-items-center">
        {{ page.navbar_right }}
      </div>
      {% endif %}
    {% endblock %}
  {% endembed %}

  {% if page.header %}
      <header class="page__header mb-3">
          <div class="container-fluid px-0">
            {{ page.header }}
          </div> 
      </header>    
    {% endif %}
    
  <main title="Contenido principal">  

    {% if page.content %}      
      <div class="page__content">
        <div class="container-fluid px-0">          
          {{ page.content }}
          {% if page.content_1 and page.content_2 %}
            <div class="container">
              <div class="row">
                <div class="col-md-7 col-sm-7 col-12">
                  {{ page.content_1}}
                </div>
                <div class="col-md-5 col-sm-5 col-12">
                  {{ page.content_2}}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        <div class="row">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}

  {% if page.footer_light %}
    <footer class="page__footer_2">
      <div class="container">
        <div class="row">
          {{ page.footer_light }}
        </div>
      </div>
    </footer>
  {% endif %}

  {% if page.footer_black %}
    <footer class="page__footer_3">
      <div class="container">
        <div class="row">
          {{ page.footer_black }}
        </div>
      </div>
    </footer>
  {% endif %}

</div>
