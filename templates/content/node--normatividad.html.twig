{#
/**
 * @file
 * Template for a Node.
 */
#}
{%
  set classes = [
  'node',
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  node.bundle|clean_class,
  node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  'normatividad'
]
%}
{% set createdDate = node.getCreatedTime|date('j/m/Y - H:i') %}
{# {{ kint(content|keys)}} #}
<article{{attributes.addClass(classes)}}>
  {% block content %}    

    <div class="container">

      <div class="row justify-content-md-center">
        <div class="col-md-10">
          <div class="news__node-title">
            <h2 class="text-center">{{ node.label }}</h2> 
          </div>
        </div>  
        <div class="col-md-10 col-12">
          
          <div class="item_data mb-3"><b>Fecha de publicaci√≥n:</b>  {{ createdDate  }}</div>
            
            {{ content.body}}

             {% if content.field_blocks|render %} 
              <div class="anexos">
                <p><b>Consultar documentos anexos:</b></p>
                {{content.field_blocks}}
              </div>
             {% endif %}  

             {% if content.field_file_download|render %} 
                {{ content.field_file_download }}
             {% endif %}
          </div>
        
      </div>
   
    
      {% if not page %}
        <h2{{title_attributes}}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}    
    </div>
  {% endblock %}
</article>
