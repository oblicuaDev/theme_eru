{# /** * @file * Template for a Node. */ #} {% set classes = [ 'node',
node.isPromoted() ? 'node--promoted', node.isSticky() ? 'node--sticky', not
node.isPublished() ? 'node--unpublished', node.bundle|clean_class,
node.bundle|clean_class ~ '--' ~ view_mode|clean_class, 'project' ] %} {#
{{ kint(content | keys) }} #}
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css" />
<section id="special-landings-v2">
    {% block content %}
    {% set title = node.title.value %}


    <div class="banner">
        <div class="text">
            <h1 id="mainHeading">{{ title }}</h1>
            <div id="firstPart"></div>
            <div id="secondPart"></div>
            {{content.field_subtitle}}
        </div>
        <section class="splide" aria-label="Splide Basic HTML Example">
            <div class="splide__track">
                <ul class="splide__list">
                    <li class="splide__slide">{{content.field_imagen_banner.0}}</li>
                    <li class="splide__slide">{{content.field_imagen_banner.1}}</li>
                    <li class="splide__slide">{{content.field_imagen_banner.2}}</li>
                </ul>
            </div>
        </section>
    </div>
    <div class="description" id="description">
        <h2>Descripción</h2>
        <div class="desc-p">
            {{ content.body }}
        </div>
    </div>
    <div class="container">
        {{ content.field_videos  }}
        {% for item in content.field_videos %}
            {{ item.content }}
        {% endfor %}
    </div>
    <div class="map">
        {{ content.field_mapa | raw }}
        <img src="  {{ content.field_mapa.value }}" usemap="#image-map">
        <img src="  {{ content.field_mapa.uri }}" usemap="#image-map">

        <map name="image-map">
            <area target="_blank" alt="" title="" href="https://renobo.com.co/es/proyectos/calle-72-actuacion-estrategica" coords="934,428,851,296" shape="rect">
            <area target="_blank" alt="" title="" href="https://renobo.com.co/es/proyectos/distrito-aeroportuario-engativa-actuacion-estrategica" coords="713,689,859,517" shape="rect">
            <area target="_blank" alt="" title="" href="https://renobo.com.co/es/proyectos/ciudadela-educativa-y-del-cuidado-actuacion-estrategica" coords="516,595,691,506" shape="rect">
            <area target="_blank" alt="" title="" href="https://renobo.com.co/es/proyectos/zona-industrial-de-bogota-zibo-actuacion-estrategica" coords="1026,358,1155,471" shape="rect">
        </map>
    </div>
    {% endblock %}

</section>
<script>
    // Selecciona el h1
    var h1Element = document.getElementById('mainHeading');

    // Obtén el texto del h1
    var text = h1Element.textContent;

    // Divide el texto en dos partes
    var parts = text.split(' ');
    var firstPart = parts.shift();
    var secondPart = parts.join(' ');

    // Selecciona los divs donde se colocarán las partes del texto
    var firstPartDiv = document.getElementById('firstPart');
    var secondPartDiv = document.getElementById('secondPart');

    // Establece el texto de cada div
    firstPartDiv.textContent = firstPart;
    secondPartDiv.textContent = secondPart;
    document.addEventListener("DOMContentLoaded", function () {
        var splide = new Splide('.splide', {
            type: 'fade',
            pagination: false,
            arrows: false,
            autoplay: true,
            interval: 4000,
            speed: 800,
        });
        splide.mount();
        // Add smooth scrolling to all links
        var links = document.querySelectorAll("a");

        links.forEach(function (link) {
            link.addEventListener('click', function (event) {
                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {
                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using JavaScript's scrollTo() method to add smooth page scroll
                    var target = document.querySelector(hash);
                    var targetOffset = target.offsetTop;
                    var scrollOptions = {
                        top: targetOffset,
                        behavior: 'smooth'
                    };

                    window.scrollTo(scrollOptions);

                    // Add hash (#) to URL when done scrolling (default click behavior)
                    history.pushState(null, null, hash);
                }
            });
        });
    });
</script>