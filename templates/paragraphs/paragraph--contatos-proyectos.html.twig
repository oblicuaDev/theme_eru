{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}

<div{{ attributes.addClass(classes) }}>
    {# Check if the Entity Reference Revisions field has a target entity. #}
    {% if content.field_contratos['#items'].entity %}

    {# Get the latest revision of the referenced entity. #}
    {% set contrato_entity = content.field_contratos['#items'].entity %}

    {# Check if the referenced entity has the desired field. #}
    {% if contrato_entity.field_nombre_contratista_o_inter.value is not null %}
    <div class="name">
        {{ contrato_entity.field_nombre_contratista_o_inter.value }}
    </div>
    {% endif %}

    {# Repeat the above pattern for other fields as needed. #}

    {% endif %}
    <div class="name">
        {{ content.field_contratos.field_nombre_contratista_o_inter }}
    </div>
    <div class="data">

        <div class="number">
            <div class="icon">
                <img src="/sites/default/files/2023-11/numero.png" alt="icon">
            </div>
            <div class="txt">
                <strong>NÃºmero de contrato</strong>
                {{ content.field_contratos.field_numero_de_contrato }}
            </div>
        </div>
        <div class="estado">
            <div class="icon">
                <img src="/sites/default/files/2023-11/estadoPro.png" alt="icon">
            </div>
            <div class="txt">
                <strong>Estado del contrato</strong>
                {{ content.field_contratos.field_estado_del_contrato }}
            </div>
        </div>
        <div class="documento">
            <div class="icon">
                <img src="/sites/default/files/2023-11/link.png" alt="icon">
            </div>
            <div class="txt">
                <strong>Documento contractua</strong>
                <a href="{{ content.field_contratos.field_documento }}">Link Secop</a>
            </div>
        </div>

    </div>
    </div>